<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.pentaho</groupId>
    <artifactId>pentaho-ce-bundle-parent-pom</artifactId>
    <version>9.0.0.0-SNAPSHOT</version>
  </parent>

  <groupId>org.hitachivantara</groupId>
  <artifactId>my-project-core-osgi-impl</artifactId>
  <version>9.0.0.0-SNAPSHOT</version>
  <packaging>bundle</packaging>

  <dependencies>
    <dependency>
      <groupId>org.hitachivantara</groupId>
      <artifactId>my-project-core-impl</artifactId>
      <version>9.0.0.0-SNAPSHOT</version>
      <!-- It is bad to need to do this exclusion to prevent non OSGi stuff to be included -->
      <exclusions>
        <exclusion>
          <groupId>org.hitachivantara</groupId>
          <artifactId>my-project-core-api</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <!-- It is bad to need to declare the dependency on the OSGi API.
         This should come automatically... -->
    <dependency>
      <groupId>org.hitachivantara</groupId>
      <artifactId>my-project-core-osgi-api</artifactId>
      <version>9.0.0.0-SNAPSHOT</version>
      <!-- It is bad to need to do this exclusion to prevent non OSGi stuff to be included -->
      <exclusions>
        <exclusion>
          <groupId>org.hitachivantara</groupId>
          <artifactId>my-project-core-api</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>my-project-core-impl</includeArtifactIds>
              <excludeTransitive>true</excludeTransitive>
              <outputDirectory>${project.build.outputDirectory}</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
